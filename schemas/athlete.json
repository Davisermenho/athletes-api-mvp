{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Athlete",
  "type": "object",
  "additionalProperties": false,
  "required": ["athlete_id", "full_name"],
  "properties": {
    "athlete_id": {"type": "string", "description": "Business identifier for the athlete (unique)."},
    "row_uuid": {"type": "string", "format": "uuid", "description": "UUID row identifier (gen_random_uuid())."},
    "full_name": {"type": "string", "description": "Full name of athlete."},
    "nickname": {"type": ["string", "null"], "description": "Commonly used nickname."},
    "birth_date": {"type": ["string", "null"], "format": "date", "description": "Date of birth."},
    "age_display": {"type": ["string", "null"], "description": "Human readable age display."},
    "category": {"type": ["string", "null"], "description": "Category or class of athlete."},
    "main_attack_position": {
      "type": ["string", "null"],
      "description": "Primary attacking position.",
      "enum": ["armadora_central", "lateral_esquerda", "lateral_direita", "ponta_esquerda", "ponta_direita", "pivo"],
      "x-ui": {"widget": "select", "options": ["armadora_central", "lateral_esquerda", "lateral_direita", "ponta_esquerda", "ponta_direita", "pivo"], "placeholder": "Selecione..."}
    },
    "secondary_attack_position": {
      "type": ["string", "null"],
      "description": "Secondary attacking position.",
      "enum": ["central", "lateral_esquerda", "lateral_direita", "ponta_esquerda", "ponta_direita", "pivo"],
      "x-ui": {"widget": "select", "options": ["central", "lateral_esquerda", "lateral_direita", "ponta_esquerda", "ponta_direita", "pivo"], "placeholder": "Selecione..."}
    },
    "main_defensive_position": {
      "type": ["string", "null"],
      "description": "Primary defensive position.",
      "enum": ["1_defensora", "2_defensora", "defensora_base", "goleira", "defensora_avancada"],
      "x-ui": {"widget": "select", "options": ["1_defensora", "2_defensora", "defensora_base", "goleira", "defensora_avancada"], "placeholder": "Selecione..."}
    },
    "secondary_defensive_position": {
      "type": ["string", "null"],
      "description": "Secondary defensive position.",
      "enum": ["1_defensora", "2_defensora", "defensora_base", "goleira", "defensora_avancada"],
      "x-ui": {"widget": "select", "options": ["1_defensora", "2_defensora", "defensora_base", "goleira", "defensora_avancada"], "placeholder": "Selecione..."}
    },
    "jersey_number": {"type": ["integer", "null"], "minimum": 0, "description": "Jersey number (>= 0)."},
    "date_joined": {"type": ["string", "null"], "format": "date", "description": "Date the athlete joined."},
    "date_left": {"type": ["string", "null"], "format": "date", "description": "Date the athlete left (nullable)."},
    "active_flag": {"type": "boolean", "description": "Whether athlete is active (default true).", "default": true},
    "height_cm": {"type": ["integer", "null"], "minimum": 0, "description": "Height in centimeters (>= 0)."},
    "weight_kg": {"type": ["number", "null"], "minimum": 0, "description": "Weight in kg (>= 0)."},
    "medical_notes": {"type": ["string", "null"], "description": "Medical notes."},
    "social_notes": {"type": ["string", "null"], "description": "Social notes."},
    "physical_notes": {"type": ["string", "null"], "description": "Physical notes."},
    "mental_notes": {"type": ["string", "null"], "description": "Mental/psych notes."},
    "external_reference": {"type": ["string", "null"], "description": "External system reference."},
    "created_at": {"type": ["string", "null"], "format": "date-time", "description": "Record creation timestamp."},
    "updated_at": {"type": ["string", "null"], "format": "date-time", "description": "Record last update timestamp."},
    "last_sync_at": {"type": ["string", "null"], "format": "date-time", "description": "Last sync timestamp with external sources."}
  }
}
